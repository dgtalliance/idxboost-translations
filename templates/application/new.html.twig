{% extends 'base.html.twig' %}

{% block title %}Add application{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">
                <h3 class="card-title text-bold text-gray">Add application</h3>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 form-group">
                    {{ form_label(form.slug) }}
                    {{ form_widget(form.slug) }}
                    {{ form_errors(form.slug) }}
                </div>
            </div>
        </div>
        <div class="card-footer" style="display: flex; justify-content: flex-end; align-items: center;">
            <a class="btn btn-danger mr-2 btn-cancel" data-url="{{ path('app_application_index') }}"
               data-title=""
               data-content="Â¿Are you sure you want to perform the action?" type="button"><i class="fa fa-times"></i> Cancel</a>
            <button class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}